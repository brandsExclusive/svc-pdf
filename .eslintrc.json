{
  "env": {
    "mocha": true,
    "node": true
  },
  "plugins": [
    "prettier"
  ],
  "parser": "babel-eslint",
  "extends": [
    "prettier",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "no-console": 0,
    "react/prop-types": 0,
    "prettier/prettier": [
      "error",
      { "singleQuote": true }
    ]
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  }
}
